<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DetailedActivity">
    <TextView
        android:id="@+id/tvfirstText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="80dp"
        android:elevation="3dp"
        android:background="@drawable/bg_login_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tvSecondText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:elevation="3dp"
        android:background="@drawable/bg_login_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tvfirstText"/>
    <TextView
        android:id="@+id/tvSecondThird"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:elevation="3dp"
        android:background="@drawable/bg_login_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSecondText"/>


    <TextView
        android:id="@+id/tvFourthText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:elevation="3dp"
        android:background="@drawable/bg_login_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSecondThird"/>
    <TextView
        android:id="@+id/tvFiveText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:elevation="3dp"
        android:background="@drawable/bg_login_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFourthText"/>
    <TextView
        android:id="@+id/tvSixText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:elevation="3dp"
        android:background="@drawable/bg_login_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFiveText"/>
    <TextView
        android:id="@+id/tvSeventhText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:elevation="3dp"
        android:background="@drawable/bg_login_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSixText"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnVerify"
        android:layout_width="155dp"
        android:layout_height="45dp"
        android:elevation="5dp"
        android:text="@string/verify"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:textSize="12sp"
        android:padding="@dimen/button_padding"
        android:textAllCaps="false"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="25dp"
        android:textColor="@color/white"
        android:background="@drawable/bg_login_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNext"
        android:layout_width="155dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:elevation="5dp"
        android:text="@string/next"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:textSize="12sp"
        android:padding="5dp"
        android:textAllCaps="false"
        android:textColor="@color/blue"
        app:layout_constraintTop_toTopOf="@+id/btnVerify"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/btnVerify"
        android:background="@drawable/bg_login_white"/>
</androidx.constraintlayout.widget.ConstraintLayout>